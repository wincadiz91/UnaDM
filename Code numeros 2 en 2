/* Numeros de 2 en 2 hasta el 100 */

#include <stdio.h>
#include <stdlib.h>

int main (int argc, char *argv[])
{
    printf("Los numeros de 2 en 2 hasta el 100 son: \n");
    int i;
    float a;
    
for(i=2;i<=100;i++)
    
{
 a=i%2;
 if(a==0)
 printf("%d\n",i);
        
}
     system("PAUSE") ;
 return 0;

}
